<div class="container ">
  <p style="color: green"><%= notice %></p>

  <h1 class="text-center fw-bold text-uppercase">Restaurants</h1>
  <br>
  <%= link_to "➕ Add restaurant", new_restaurant_path, class:"btn btn-success" %>
  <br><br>
  <div id="restaurants">
  <ul class="list-group">
    <% @restaurants.each do |restaurant| %>
      <!-- Restaurant Item -->
      <li id="show_restaurant" class="list-group-item">
        <!-- Restaurant Info -->
        <div class="mb-2 mt-2"><%= render restaurant %></div>
        <!-- Restaurant Btn -->
        <div class="d-flex justify-content-between mb-2">
          <%= link_to "Details", restaurant, class: "btn btn-secondary" %>
          <%= link_to "Edit review", restaurant, class: "btn btn-warning" %>
        </div>
      </li>
    <% end %>
  </ul>
</div>

</div>
